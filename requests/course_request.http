# Get all courses.

GET http://localhost:9080/simple-ucm/api/courses

###

# Get single course.

GET http://localhost:9080/simple-ucm/api/courses/cc0b0577-bb6f-45b7-81d6-3db88e6ac19f

###

# Get courses by university.

GET http://localhost:9080/simple-ucm/api/universities/5d1da2ae-6a14-4b6d-8b4f-d117867118d4/courses

###

# Create new course.

PUT http://localhost:9080/simple-ucm/api/universities/5d1da2ae-6a14-4b6d-8b4f-d117867118d4/courses/3c6f1eb1-8069-44ab-988f-d7fed2b65d87
Content-Type: application/json

{
  "name": "Mathematics",
  "description": "An advanced course on Mathematics",
  "studyType": "BACHELOR",
  "passingThreshold": "2.99",
  "semester": "1"
}

###

# Update course.

PATCH http://localhost:9080/simple-ucm/api/universities/5d1da2ae-6a14-4b6d-8b4f-d117867118d4/courses/cc0b0577-bb6f-45b7-81d6-3db88e6ac19f
